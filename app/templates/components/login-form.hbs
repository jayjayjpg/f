  <p>
    {{input classNames="validate" type="email" name="email" id="identification" value=identification placeholder="Your E-Mail Address"}}
    <label for="identification" data-error="that doesn't look right..." data-success="perfect!">Your e-mail address <abbr title="required">*</abbr></label>
  </p>
  <p>
    {{input classNames="validate" type="password" name="password" id="password" value=password placeholder="Your Password"}}
    <label for="password" data-error="that doesn't look right..." data-success="perfect!">Your password <abbr title="required">*</abbr></label>
  </p>
{{#if formComplete}}
  <button class="btn btn-large waves-effect waves-light blue darken-4" {{action 'loginConfirm'}}>Login
    <i class="material-icons right">send</i>
  </button>
  {{#if loginSent}}
    <p>logging you in....</p>
  {{/if}}
{{else}}
  <button class="btn btn-large grey" disabled>Login</button>
{{/if}}
