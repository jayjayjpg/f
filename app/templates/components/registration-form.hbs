  <legend class="center text-center">Your Details</legend>
  <p>
    {{input type="text" name="firstname" id="firstn" value=firstName}}
    <label for="firstn">First name <abbr title="required">*</abbr></label>
  </p>
  <p>
    {{input type="text" name="lastname" id="lastn" value=familyName}}
    <label for="lastn">Last name <abbr title="required">*</abbr></label>
  </p>
  <p>
    {{input classNames="validate" type="email" name="email" id="email" value=emailAddress}}
    <label for="email" data-error="that doesn't look right..." data-success="perfect!">Your e-mail address <abbr title="required">*</abbr></label>
  </p>
  <p>
    {{input classNames="validate" type="password" name="pwd" id="pwd" value=password}}
    <label for="pwd" data-error="that doesn't look right..." data-success="perfect!">Your password <abbr title="required">*</abbr></label>
  </p>
{{#if formComplete}}
  <button class="btn btn-large waves-effect waves-light blue darken-4" {{action 'submitConfirm'}}>Submit
    <i class="material-icons right">send</i>
  </button>
  {{#if registrationSent}}
    <p>saving new user....</p>
  {{/if}}
{{else}}
  <button class="btn btn-large grey" disabled>Submit</button>
{{/if}}


